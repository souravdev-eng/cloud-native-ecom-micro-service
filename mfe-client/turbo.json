{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local",
        ".env",
        "tsconfig.json"
    ],
    "globalEnv": [
        "NODE_ENV",
        "CI"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**"
            ],
            "inputs": [
                "src/**",
                "!src/**/*.test.*",
                "!src/**/*.spec.*",
                "package.json",
                "tsconfig.json",
                "rspack.config.ts",
                "module-federation.config.ts",
                "module-federation.config.prod.ts"
            ],
            "env": [
                "NODE_ENV",
                "API_URL",
                "PUBLIC_URL"
            ],
            "cache": true
        },
        "build:dev": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ],
            "env": [
                "NODE_ENV"
            ],
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "NODE_ENV",
                "PORT"
            ]
        },
        "start": {
            "cache": false,
            "persistent": true,
            "env": [
                "NODE_ENV",
                "PORT"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "inputs": [
                "src/**",
                "test/**",
                "tests/**",
                "**/*.test.*",
                "**/*.spec.*"
            ],
            "cache": true
        },
        "lint": {
            "outputs": [],
            "inputs": [
                "**/*.ts",
                "**/*.tsx",
                "**/*.js",
                "**/*.jsx",
                ".eslintrc.*",
                "eslint.config.*"
            ],
            "cache": true
        },
        "lint:fix": {
            "outputs": [],
            "cache": false
        },
        "format": {
            "outputs": [],
            "cache": false
        },
        "format:check": {
            "outputs": [],
            "cache": true
        },
        "type-check": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [],
            "cache": true
        },
        "clean": {
            "cache": false
        }
    }
}