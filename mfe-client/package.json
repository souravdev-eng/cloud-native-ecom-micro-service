{
	"name": "mfe-client",
	"private": true,
	"packageManager": "pnpm@8.15.0",
	"workspaces": [
		"admin",
		"dashboard",
		"user",
		"host",
		"shared"
	],
	"scripts": {
		"build": "turbo run build",
		"build:dev": "turbo run build:dev",
		"dev": "turbo run dev",
		"start": "turbo run start",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"format": "turbo run format",
		"format:check": "turbo run format:check",
		"type-check": "turbo run type-check",
		"clean": "turbo run clean",
		"clean:cache": "rm -rf .turbo node_modules/.cache",
		"dev:admin": "turbo run dev --filter=admin",
		"dev:dashboard": "turbo run dev --filter=dashboard",
		"dev:user": "turbo run dev --filter=user",
		"dev:host": "turbo run dev --filter=host",
		"dev:all": "turbo run dev",
		"build:admin": "turbo run build --filter=admin",
		"build:dashboard": "turbo run build --filter=dashboard",
		"build:user": "turbo run build --filter=user",
		"build:host": "turbo run build --filter=host",
		"graph": "turbo run build --graph",
		"info": "turbo daemon status",
		"dev:legacy": "concurrently \"cd user && npm run start\" \"cd dashboard && npm run start\" \"cd admin && npm run start\" \"cd host && npm run start\"",
		"install:all": "pnpm install",
		"lint-staged": "npx lint-staged"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"concurrently": "^8.2.2",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-security": "^3.0.1",
		"globals": "^16.3.0",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"turbo": "^2.7.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix --max-warnings=0 --no-ignore",
			"prettier --write"
		],
		"*.{json,css,scss,md,yaml,yml}": [
			"prettier --write"
		],
		"*.{html,htm}": [
			"prettier --write"
		]
	}
}