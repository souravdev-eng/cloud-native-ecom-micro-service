{
  "name": "product",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --poll src/index.ts",
    "d-build": "docker build -t souravdeveloper/ecom-product .",
    "d-push": "docker push souravdeveloper/ecom-product",
    "d-pub": "npm run d-build && npm run d-push",
    "test": "jest --watchAll --no-cache"
  },
  "config": {
    "mongodbMemoryServer": {
      "systemBinary": "/opt/homebrew/bin/mongod",
      "arch": "x64",
      "disablePostinstall": "1",
      "version": "6.5.1",
      "debug": "0"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 3000,
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  },
  "dependencies": {
    "@ecom-micro/common": "^2.0.29",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-validator": "^3.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/uuid": "^9.0.0",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.2",
    "mongoose": "^6.7.5",
    "node-nats-streaming": "^0.3.2",
    "redis": "^4.6.14",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.15",
    "@types/supertest": "^2.0.12",
    "jest": "^29.3.1",
    "mongodb-memory-server": "6.5.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3"
  }
}
