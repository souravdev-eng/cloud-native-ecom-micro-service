{
  "name": "auth",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --poll src/index.ts",
    "d-build": "docker build -t souravdeveloper/ecom-auth .",
    "d-push": "docker push souravdeveloper/ecom-auth",
    "d-pub": "npm run d-build && npm run d-push",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest"
  },
  "config": {
    "mongodbMemoryServer": {
      "systemBinary": "/opt/homebrew/bin/mongod",
      "arch": "x64",
      "disablePostinstall": "1",
      "version": "6.5.1",
      "debug": "0"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 4000,
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  },
  "dependencies": {
    "@ecom-micro/common": "^2.0.28",
    "@types/amqplib": "^0.10.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.14",
    "amqplib": "^0.10.3",
    "bcryptjs": "^2.4.3",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^8.8.3",
    "nodemailer": "^6.9.12",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.3.1",
    "mongodb-memory-server": "6.5.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3"
  }
}